<%- contentFor('body') %>
<div class="container">
  <h2>Lista de Funcionários</h2>
  <table class="table table-hover table-sm" border="1">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Nome</th>
        <th scope="col">Sobrenome</th>
        <th scope="col">Matricula</th>
        <th scope="col">Setor</th>
        <th scope="col">Ação</th>
      </tr>
    </thead>
    <tbody>
      <% data.forEach(function(details) { %>
      <tr scope="row">
        <td><%=details.name%></td>
        <td><%=details.lastname%></td>
        <td><%=details.matricula%></td>
        <td><%=details.setor %></td>
        <td>
          <a class="btn btn-info" href="/employee/show/<%= details._id %>">Detalhes</a>
          -
          <a class="btn btn-warning" href="/employee/edit/<%= details._id %> ">Editar</a> 
          -
          <a onclick="return confirm('Você realmente quer deletar esse registro?');" class="btn btn-danger" href="/employee/delete/<%= details._id %> ">Deletar</a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <a class="btn btn-primary" href="/employee/add">Novo</a>
</div>
