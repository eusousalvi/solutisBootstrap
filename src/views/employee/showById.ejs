<%- contentFor('body') %>
<div class="container">
  <h2>Funcionário: <%= `${data.name} ${data.lastname}` %></h2>
  <table class="table table-hover table-sm" border="1">
    <thead class="thead-dark">
      <tr>
        <th scope="col"></th>
        <th scope="col">Dados</th>
      </tr>
    </thead>
    <tbody>
      <tr scope="row">
        <td>Nome:</td>
        <td><%= `${data.name} ${data.lastname}` %></td>
      </tr>
      <tr scope="row">
        <td>Matrícula:</td>
        <td><%= data.matricula%></td>
      </tr>
      <tr scope="row">
        <td>Setor:</td>
        <td><%= data.setor%></td>
      </tr>
      <tr scope="row">
        <td>Salário:</td>
        <td>R$ <%= data.salario%></td>
      </tr>
      <tr scope="row">
        <td>Data de nascimento:</td>
        <td><%= data.birthday%></td>
      </tr>
    </tbody>
  </table>
    <a class="btn btn-warning" href="/employee/edit/<%= data._id %> ">Editar</a> 
    <a onclick="return confirm('Você realmente quer deletar esse registro?');" class="btn btn-danger" href="/employee/delete/<%= data._id %> ">Deletar</a>
    <a href="/employee/show" class="btn btn-secondary">Voltar</a>
</div>
