<%- contentFor('body') %>
  <section class="container">
    <h2>Registro de Provas</h2>
    <table class="table table-hover table-sm" border="1">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Título</td>
          <th scope="col">Ação</td>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(function(details) { %>
          <tr scope="row">
            <td>
              <%= details.title %>
            </td>
            <td><a class="btn btn-info" href="/exam/show/<%= details._id %>">Detalhes</a> - <a class="btn btn-warning" href="/exam/edit/<%= details._id %>">Editar</a> - <a class="btn btn-danger" href="/exam/delete/<%= details._id %>">Deletar</a></td>
          </tr>
          <% }) %>
      </tbody>
    </table>
    <a href="/exam/add"><button class="btn btn-primary">Novo</button></a>
  </section>