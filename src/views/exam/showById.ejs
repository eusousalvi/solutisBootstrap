<%- contentFor('body') %>
  <section class="container">
    <h2>Prova - <%= data.title %>
    </h2>
    <table class="table table-hover table-sm" border="1">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Número</td>
          <th scope="col">Questão</td>
        </tr>
      </thead>
      <tbody>
        <% data.questions.forEach(function(question, index) { %>
          <tr scope="row">
            <td>
              <%= index + 1 %>
            </td>
            <td>
              <%= question %>
            </td>
          </tr>
          <% }) %>
      </tbody>

    </table>
    <a href="/exam/edit/<%= data._id %>"><button class="btn btn-primary">Editar</button></a>
    <a href="/exam/delete/<%= data._id %>"><button class="btn btn-danger">Deletar</button></a>
    <a href="/exam/show/"><button class="btn btn-secondary">Voltar</button></a>
  </section>