<%- contentFor('body') %>
<div class="container">
  <h2>Registrar Estudante</h2>
  <form action="/student/show" method="POST">
    <div class="form-group">
      <label for="form-name">Nome</label>
      <input
        type="text"
        class="form-control"
        required="required"
        id="form-name"
        name="name"
      />
    </div>

    <div class="form-group">
      <label for="form-surname">Sobrenome</label>
      <input
        type="text"
        class="form-control"
        required="required"
        id="form-surname"
        name="surname"
      />
    </div>

    <div class="form-group">
      <label for="form-education">Idade</label>
      <input
        type="number"
        class="form-control"
        required="required"
        id="form-education"
        name="age"
      />
    </div>

    <div class="form-group">
      <label for="form-salary">RG</label>
      <input
        type="number"
        step="0.01"
        class="form-control"
        required="required"
        id="form-salary"
        name="rg"
      />
    </div>

    <a type="submit"><button class="btn btn-primary">Adicionar</button></a>
    <a href="/student/show/"
      ><button class="btn btn-secondary">Voltar</button></a
    >
  </form>
</div>
