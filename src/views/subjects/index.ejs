<%- contentFor('body') %>
<div class="container">
  <h2>Registrar Disciplina</h2>
    <form action="/subjects/show" method="POST">

      <div class="form-group">
        <label for="form-title">Título</label>
        <input type="text" class="form-control"
          required="required" id="form-title" name="title" placeholder="Adicione o título do da disciplina">
      </div>

      <div class="form-group">
        <label for="form-hours">Carga horária semanal</label>
        <input type="text" class="form-control"
          required="required" id="form-hours" name="hours" placeholder="Adicione a carga horária da disciplina">
      </div>

      <div class="form-group">
        <label for="form-name">Nome do professor</label>
        <input type="text" class="form-control"
          required="required" id="form-name" name="name" placeholder="Adicione o nome do professor">
      </div>

      <div class="form-group">
        <label for="form-description">Descrição</label>
        <textarea type="text" class="form-control"
          required="required" id="form-description" name="description" rows="4" placeholder="Adicione a descrição da disciplina">
          </textarea>
      </div>

      
      <a type="submit"><button class="btn btn-primary">Criar</button></a>
      <a href="/subjects/show/"><button class="btn btn-secondary">Voltar</button></a>
    </form>
</div>