<%- contentFor('body') %>
<div class="container">
  <h2>Lista de Disciplinas</h2>
  <table class="table table-hover table-sm" border="1">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Título</td>
        <th scope="col">Carga horária semanal</td>
        <th scope="col">Nome do professor</td>
        <th scope="col">Descirção</td>
      </tr>
    </thead>
    <tbody>
      <% data.forEach(function(details) { %>
        <tr>
          <td scope="row">
            <%= details.title %>
          </td>
          <td>
            <%= details.hours %>
          </td>
          <td>
            <%= details.name %>
          </td>
          <td>
            <%= details.description %>
          </td>
          <td>
            -
            <a href="/subjects/edit/<%= details._id %>">Editar</a>
            -
            <a href="/subjects/delete/<%= details._id %>">Deletar</a>
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>
  <a href="/subjects/add"><button class="btn btn-primary">Novo</button></a>
</div>