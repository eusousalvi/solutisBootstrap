<%- contentFor('body') %>
<div class="container">
  <h2>Professor <%= data.name+ " " + data.surname%></h2>
  <table class="table table-hover table-sm" border="1">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Informação</td>
        <th scope="col">Valor</td>
      </tr>
    </thead>
    <tbody> 
      <tr scope="row">
        <td>Nome Completo</td>
        <td><%= data.name + " " + data.surname %></td>
      </tr>

      <tr scope="row">
        <td>Escolaridade</td>
        <td><%= data.education %></td>
      </tr>

      <tr scope="row">
        <td>Salário</td>
        <td><%="R$ "+data.salary %></td>
      </tr>

    </tbody>
    
  </table>
  <a href="/teacher/edit/<%= data._id %>"><button class="btn btn-primary">Editar</button></a>
  <a href="/teacher/delete/<%= data._id %>"><button class="btn btn-danger">Deletar</button></a>
  <a href="/teacher/show/"><button class="btn btn-secondary">Voltar</button></a>
</div>